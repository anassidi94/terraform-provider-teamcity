root = true

; Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

; Golang
[*.go]
indent_style = tab

[*.{tf, md, markdown,yml,yaml}]
indent_size = 2

[*.md]
 trim_trailing_whitespace = false

[{Makefile,**.mk}]
indent_style = tab

